<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Stats for <%= poll.title%></title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
      crossorigin="anonymous"
    />
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
      integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div class="container">
      <a href="/poll">go to live polls</a>
     <a href="/poll/create">create your own</a>
      <h5>Avalible options so far</h5>
      <h5>Q : <%= poll.question %></h5>
        <h5>Votes So Far</h5>
        <% poll.votes.forEach(function(pv){ %>
        <div class="alert alert-info">
          <strong><%= Object.keys(pv)[0] %></strong> - <%= Object.values(pv)[0]
          %> Vote(s)
        </div>
        <% }); %> 
      <form action="/poll/<%= poll.id %>?_method=PUT" method="POST">
      <div class="form-group" id="answers">
        <% poll.answers.forEach(function(answer,i){ %>
          <label for="answer">Option <%=i+1%></label>
          <input
            type="text"
            class="form-control"
            id="<%= answer%>"
            name="answer"
            value="<%=answer%>"
            disabled
          />
        <% }); %>
      </div>
      <button type="submit" class="btn btn-primary">Save poll</button>
      <button
      type="button"
      onclick="addelement()"
      class="btn btn-secondary btn-sm"
    />
      add more options
      </form>
    </div>
  </body>
  <script>
    function addelement() {
      let formElement = document.getElementById("answers");
      console.log();
      let len = formElement.children.length / 2;
      let input = document.createElement("input");
      input.type = "text";
      input.name = "answer";
      input.required = true;
      input.classList.add("form-control");
      let label = document.createElement("label");
      label.innerText = `Option ${len + 1}`;
      formElement.appendChild(label);
      formElement.appendChild(input);
    }
  </script>
</html>
